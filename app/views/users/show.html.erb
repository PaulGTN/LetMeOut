<div style="text-align:center"class="jumbotron">
  <h1 class="display-4"><%=@user.first_name%></h1>
  <p class="lead"><%=@user.description%></p>
  <hr class="my-4">     
   <p>Prénom :<%=@user.first_name%></p>
<p>Nom :<%=@user.last_name%></p>
<p>Email :<%=@user.email%></p>

<%=link_to "Éditer son profil", edit_user_path(@user), class:"btn btn-danger"%>

</div>



<div class="row">

	<%@events.each do |event|%>
	<div class="col-sm-4">
	    <div class="card" style="margin-bottom:10px">
	      <div class="card-body">
	        <h5 class="card-title"><%=event.title%> </h5>

	        <p class="card-text"><%= event.description.first(80) %></p>
	        <p class="card-text">Date : <%=event.start_date%> |  Duration : <%=event.duration%></p>
	 		
	 		<%=link_to "see event", event_path(event), class:"btn btn-primary"%>
	    </div>
	  </div>	  
	 
	</div>
	<%end%>
</div>

