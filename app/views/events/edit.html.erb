<div class="col-6 offset-3">
	<br><br>
<h1>Modifer un évènement</h1>
<br><br>
		<%= form_for(:event, url: events_path, html: {method:'POST'} ) do |f| %>

			<div class="form-group">
			<label>Titre</label>
			<%= f.text_field :title , class:'form-control'%>
			</div>
		
			<div class="form-group">
			<label>Description</label>
			<%= f.text_field :description , class:'form-control'%>
			</div>

			<div class="form-group">
			<label>Date</label>
			<%= date_field(:user, :born_on) %> <%= time_field(:task, :started_at) %>
			</div>
			

			  <div class="form-group">
			<label>Durée</label>
			<%= number_field(:duration, :price, in: 5.0..500.0, step: 5) %>
			</div>

			 <div class="form-group">
			<label>Lieu</label>
			<%= f.text_field :location , class:'form-control'%>
			</div>
			

			<div class="form-group">
			<label>Prix</label>
			<%= number_field(:price, :price, in: 1.0..1000.0, step: 1) %>
			</div>

			<div class="form-group">
			<button type="submit" class="btn btn-primary" > Envoyer</button> 
			</div>

		<%end%>
</div>